script/source = "extends CanvasLayer

@onready var quick_bar: PanelContainer = %QuickBar
@onready var tab_container: TabContainer = %TabContainer


func _ready() -> void:
	var local_inv := InventoriesController.get_inventory(\"test_local\")
	local_inv.add_miscellaneous_items([
		preload(\"res://database/building/bonfire.tres\"),
		preload(\"res://database/food/fresh_meat.tres\"),
		preload(\"res://database/food/water_clear.tres\"),
	])
	local_inv.add_item_amount(preload(\"res://database/food/water_clear.tres\"), 9)
	local_inv.add_item_amount(preload(\"res://database/food/fresh_meat.tres\"), 14)
	
	
	quick_bar.button_pressed.connect(tab_container.set_current_tab)
	quick_bar.button_pressed.connect($\"../Character/Controller\"._stop)
	tab_container.set_current_tab(-1)
	
"

